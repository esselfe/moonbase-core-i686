default_pre_build &&

#cd $SOURCE_DIRECTORY &&

if [[ $((10#${PATCHLVL})) -gt 0 ]]; then

  for (( _p=1; _p<=$((10#${PATCHLVL})); _p++ )); do
    SOURCE2=$MODULE${VERSION//.}-$(printf "%03d" $_p) &&
    PATCH2_URL=http://ftp.gnu.org/gnu/$MODULE/$MODULE-$VERSION-patches/$SOURCE2 &&
    wget $PATCH2_URL &&
    message "Applying patch "$SOURCE2 &&
    patch -p0 -i $SOURCE2
  done

fi
