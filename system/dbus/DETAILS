      SOURCE_URL=https://$MODULE.freedesktop.org/releases/$MODULE
      SOURCE_VFY=sha256:4b693d24976258c3f2fa9cc33ad9288c5fbfa7a16481dbd9a8a429f7aa8cdcf7
