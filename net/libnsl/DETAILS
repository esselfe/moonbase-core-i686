      SOURCE_URL=https://github.com/thkukuk/libnsl/releases/download/v${VERSION}/
       SOURCE_VFY=sha256:eac3062957fa302c62eff4aed718a07bacbf9ceb0a058289f12a19bfdda3c8e2
